@page "/data/weeks"
@model IndexModel
@{
  ViewData["Title"] = "Weeks";
}

<div class="jumbotron p-3 d-flex align-items-center">
  <h1 class="display-4 flex-grow-1">
    All Weeks
  </h1>
  <a class="btn btn-primary btn-sm" asp-page="./Edit">
    Log Week
  </a>
</div>

<div class="d-flex bg-primary text-white">
  <div class="p-2" style="flex:0 0 25%">
    Week 
  </div>
   <div class="p-2" style="flex:0 0 25%">
    Total Weekly Minutes Studied
  </div>
   <div class="p-2" style="flex:0 0 25%">
    Total Weekly Subjects Studied
  </div>
   <div class="p-2" style="flex:0 0 25%">
    Options
  </div>
</div>

@foreach (var item in Model.Week) {
  <div class="d-flex border-left border-right border-bottom border-primary">
    <div class="p-2" style="flex:0 0 25%">
      @item.ID
    </div>
    <div class="p-2" style="flex:1 0 25%">
      @item.TotalMinutesStudied
    </div>
    <div class="p-2" style="flex:1 0 25%">
      @item.TotalSubjectsStudied
    </div>
    <form method="post" class="p-2 btn-group" style="flex:0 0 25%" role="group" >
      <a class="btn btn-primary btn-sm" style="margin: 0 5px" asp-page="./Detail" asp-route-id="@item.ID">
        Details
      </a>
      <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@item.ID">
        Edit
      </a>
      <input type="submit" value="Delete" class="btn btn-danger btn-sm" style="margin-left: 5px">
      <input type="hidden" name="ID" value="@item.ID" />
    </form>
  </div>
}